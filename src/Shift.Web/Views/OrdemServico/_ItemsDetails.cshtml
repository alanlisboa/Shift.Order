@model IEnumerable<Shift.Application.ViewModels.OrdemServicoExameViewModel>

@{
    Layout = null;
}

<h4 class="mt-4 mb-4">Exames</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="ordem-item" asp-action="details" asp-route-id="@item.Id" class="btn">
                        @Html.DisplayFor(modelItem => item.Exame.Descricao)
                    </a>
                </td>
                <td>
                    <a asp-controller="ordem-item" asp-action="details" asp-route-id="@item.Id" class="btn">
                        @Html.DisplayFor(modelItem => item.Valor)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
