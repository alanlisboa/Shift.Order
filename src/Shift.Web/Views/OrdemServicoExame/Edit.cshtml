@model Shift.Application.ViewModels.OrdemServicoExameViewModel

@{
    ViewData["Title"] = "Editar exame";
}

<h1>Exame</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exame" class="control-label"></label>
                <select asp-for="Exame.Id" class="form-control" asp-items="ViewBag.ExameId"></select>
                <span asp-validation-for="Exame.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OrdemServico.Id" />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-controller="ordem" asp-action="edit" asp-route-id="@Model.OrdemServico.Id" class="btn btn-light ml-2">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
