@model Shift.Application.ViewModels.OrdemServicoExameViewModel

@{
    ViewData["Title"] = "Novo exame";
}

<h1>Exame</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exame.Id" class="control-label"></label>
                <select asp-for="Exame.Id" class ="form-control" asp-items="ViewBag.ExameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-controller="ordem" asp-action="edit" asp-route-id="@ViewBag.OrdemServicoId" class="btn btn-light ml-2">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
